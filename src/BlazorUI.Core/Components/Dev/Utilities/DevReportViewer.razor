
<DevPopupPageLayout Caption="@Caption"
                    CancelButtonText="@CancelButtonText"
                    Closed="Closed"
                    Height="@Height"
                    Width="@Width"
                    Visible="true">
  <PageContent>
    <DxReportViewer @ref="_reportViewer"
                    Report="Report"
                    RootCssClasses="w-100 h-100"
                    Zoom="0.65">

    </DxReportViewer>
  </PageContent>
</DevPopupPageLayout>



@code {
  private DxReportViewer _reportViewer;
  public XtraReport Report { get; set; }
  public string CancelButtonText { get; set; }
  public string Caption { get; set; }
  public EventCallback Closed { get; set; }
  public Object DataSource { get; set; }
  public string Height { get; set; } = "900px";
  public string Width { get; set; } = "900px";

  protected override void OnParametersSet()
  {
    Report.DataSource = new ObjectDataSource
      {
        DataSource = DataSource
      };
  }
}
