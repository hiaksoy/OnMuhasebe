@page "/"
@namespace Blazor.Core
@using Blazor.Core.Components.DevEx.Layouts
@using Blazor.Core.Components.DevEx.DataEditors


<DevExGridLayout ColumnSpacing="3px"
                 RowSpacing="3px"
                 RowCount=3
                 ColumnCount=3
                 RowHeights="@(new[]{"28","28","28"})"
                 ColumnWidths="@(new[]{"150px"})">

    <GridLayoutItems>


        <DevExLabel Caption="Adı Soyadı"
                    ColumnIndex="0"
                    RowIndex="0" />

        <DxGridLayoutItem Row="0" Column="1">
            <Template>
                <DxTextBox Text="0-1"></DxTextBox>
            </Template>
        </DxGridLayoutItem>

        <DxGridLayoutItem Row="0" Column="2">
            <Template>
                <DxTextBox Text="0-2"></DxTextBox>
            </Template>
        </DxGridLayoutItem>

        <DxGridLayoutItem Row="1" Column="0">
            <Template>
                <DxTextBox Text="1-0"></DxTextBox>
            </Template>
        </DxGridLayoutItem>

        <DxGridLayoutItem Row="1" Column="1">
            <Template>
                <DxTextBox Text="1-1"></DxTextBox>
            </Template>
        </DxGridLayoutItem>

        <DxGridLayoutItem Row="1" Column="2">
            <Template>
                <DxTextBox Text="1-2"></DxTextBox>
            </Template>
        </DxGridLayoutItem>

        <DxGridLayoutItem Row="2" Column="0">
            <Template>
                <DxTextBox Text="2-0"></DxTextBox>
            </Template>
        </DxGridLayoutItem>

        <DxGridLayoutItem Row="2" Column="1">
            <Template>
                <DxTextBox Text="2-1"></DxTextBox>
            </Template>
        </DxGridLayoutItem>

        <DxGridLayoutItem Row="2" Column="2">
            <Template>
                <DxTextBox Text="2-2"></DxTextBox>
            </Template>
        </DxGridLayoutItem>



    </GridLayoutItems>
</DevExGridLayout>